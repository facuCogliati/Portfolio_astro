---
import Logo from "./Logo.astro";
---

<header
  class="flex justify-center fixed w-full py-7 px-0 z-50 bg-[rgb(18,18,18)]"
>
  <div class="container flex items-center justify-between w-full px-7">
    <div class="relative z-30">
      <div id="menu-logo" class="cursor-pointer">
        <svg
          id="menu-icon"
          width="40px"
          height="40px"
          viewBox="0 0 20 20"
          fill="white"
        >
          <path
            fill="#ffff"
            fill-rule="evenodd"
            d="M18 5a1 1 0 100-2H2a1 1 0 000 2h16zm-8 4a1 1 0 100-2H2a1 1 0 100 2h8zm9 3a1 1 0 01-1 1H2a1 1 0 110-2h16a1 1 0 011 1zm-9 5a1 1 0 100-2H2a1 1 0 100 2h8z"
          ></path>
        </svg>

        <svg
          id="cross-icon"
          class="absolute top-0 bg-[rgb(18,18,18)] -translate-x-10 opacity-0 transition-transform duration-300 ease-in-out"
          fill="#ffff"
          height="40px"
          width="40px"
          viewBox="0 0 460.775 460.775"
        >
          <path
            d="M285.08,230.397L456.218,59.27c6.076-6.077,6.076-15.911,0-21.986L423.511,4.565c-2.913-2.911-6.866-4.55-10.992-4.55  c-4.127,0-8.08,1.639-10.993,4.55l-171.138,171.14L59.25,4.565c-2.913-2.911-6.866-4.55-10.993-4.55  c-4.126,0-8.08,1.639-10.992,4.55L4.558,37.284c-6.077,6.075-6.077,15.909,0,21.986l171.138,171.128L4.575,401.505  c-6.074,6.077-6.074,15.911,0,21.986l32.709,32.719c2.911,2.911,6.865,4.55,10.992,4.55c4.127,0,8.08-1.639,10.994-4.55  l171.117-171.12l171.118,171.12c2.913,2.911,6.866,4.55,10.993,4.55c4.128,0,8.081-1.639,10.992-4.55l32.709-32.719  c6.074-6.075,6.074-15.909,0-21.986L285.08,230.397z"
          ></path>
        </svg>
      </div>

      <div
        id="menu-list"
        class="bg-[rgb(18,18,18)] w-96 absolute top-[4.3rem] md:top-20 md:left-0 -left-8 -z-10 p-5 -translate-y-28 opacity-0 pointer-events-none rounded-sm border-[rgb(224,241,31)] border shadow-lg"
      >
        <ul class="flex flex-col gap-3 text-4xl font-bold tracking-wide">
          <a
            href="#hero"
            class="hover:text-[rgb(224,241,31)] cursor-pointer border-b-2 border-[rgb(224,241,31)] pb-2"
          >
            HOME
          </a>
          <a
            href="#about"
            class="hover:text-[rgb(224,241,31)] cursor-pointer border-b-2 border-[rgb(224,241,31)] pb-2"
          >
            ABOUT
          </a>
          <a
            href="#experience"
            class="hover:text-[rgb(224,241,31)] cursor-pointer border-b-2 border-[rgb(224,241,31)] pb-2"
          >
            EXPERIENCE
          </a>
          <a
            href="#proyects"
            class="hover:text-[rgb(224,241,31)] cursor-pointer border-b-2 border-[rgb(224,241,31)] pb-2"
          >
            PROJECTS
          </a>
          <a
            href="#education"
            class="hover:text-[rgb(224,241,31)] cursor-pointer border-b-2 border-[rgb(224,241,31)] pb-2"
          >
            EDUCATION
          </a>

          <a href="#contact" class="hover:text-[rgb(224,241,31)] cursor-pointer"
            >CONTACT</a
          >
        </ul>
      </div>
    </div>
    <div>
      <div class="font-bold text-white">
        <Logo />
        <!-- <img class="w-32 h-32 fill-white" src="/public/Logo_2.svg" alt="logo" /> -->
      </div>
    </div>
  </div>
</header>

<style>
  #menu-list {
    transition:
      opacity 0.2s linear,
      transform 0.25s linear;
  }
  a {
    font-family: "Big Shoulders Display", serif;
  }
</style>

<script>
  const menu = document.getElementById("menu-logo") as HTMLElement;
  const menuList = document.getElementById("menu-list") as HTMLElement;
  const crossIcon = document.getElementById("cross-icon") as HTMLElement;
  const menuIcon = document.getElementById("menu-icon") as HTMLElement;
  menu.addEventListener("click", () => {
    menuList.classList.toggle("pointer-events-none");
    menuList.classList.toggle("-translate-y-28");
    menuList.classList.toggle("opacity-0");
    menuList.classList.toggle("-z-10");
    // menuIcon.classList.toggle("hidden");
    crossIcon.classList.toggle("-translate-x-10");
    crossIcon.classList.toggle("opacity-0");
    crossIcon.classList.toggle("rotate-180");
  });
</script>
